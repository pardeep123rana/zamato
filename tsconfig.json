  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "jsx": "react",
    "allowJs": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
